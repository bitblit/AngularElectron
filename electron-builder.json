{
  "productName": "hancock",
  "appId": "com.allpointpen.hancock",
  "artifactName": "${productName}-setup-${version}.${ext}",
  "directories": {
    "output": "dist/"
  },
  "files": [
    "dist/",
    "!node_modules/",
    "package.json",
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!yarn-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "publish": {
    "provider": "s3",
    "bucket": "allpoint-applications"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "icon": "src/favicon.ico"
  }
}
