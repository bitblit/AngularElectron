{
  "name": "angular-webpack",
  "description": "Template angular 8 electron 9 webpack app",
  "version": "0.0.0",
  "engines": {
    "node": ">=12.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 140,
    "singleQuote": true,
    "arrowParens": "always"
  },
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "publish:win": "yarn compile && yarn electron-builder --win --publish=always",
    "lint": "eslint --config ./eslintrc.json src/**/*.ts",
    "lint-fix": "eslint  --config ./eslintrc.json --fix src/**/*.ts",
    "apply-circle": "node node_modules/@bitblit/ratchet/dist/circleci/apply-circle-ci-env-variables-to-files static/build-properties.json"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@angular/animations": "8.2.14",
    "@angular/cdk": "8.2.3",
    "@angular/common": "8.2.14",
    "@angular/compiler": "8.2.14",
    "@angular/core": "8.2.14",
    "@angular/flex-layout": "9.0.0-beta.31",
    "@angular/forms": "8.2.14",
    "@angular/material": "8.2.3",
    "@angular/platform-browser": "8.2.14",
    "@angular/platform-browser-dynamic": "8.2.14",
    "@angular/router": "8.2.14",
    "@bitblit/ratchet": "0.8.2",
    "auto-launch": "5.0.1",
    "core-js": "2.6.11",
    "electron-updater": "4.3.1",
    "hammerjs": "2.0.8",
    "ngx-electron": "2.2.0",
    "rxjs": "6.5.5",
    "source-map-support": "0.5.19",
    "zone.js": "0.10.3"
  },
  "devDependencies": {
    "@types/node": "12.12.47",
    "@types/auto-launch": "5.0.1",
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "angular2-template-loader": "0.6.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-prettier": "3.1.3",
    "electron": "9.0.5",
    "electron-builder": "22.7.0",
    "electron-webpack": "2.8.2",
    "electron-webpack-eslint": "6.0.0",
    "electron-webpack-ts": "4.0.1",
    "husky": "4.2.5",
    "html-loader": "1.1.0",
    "node-sass": "4.14.1",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "sass-loader": "8.0.2",
    "typescript": "3.8.3",
    "webpack": "4.43.0"
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js"
    }
  }
}
